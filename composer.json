{
  "name": "gregbiv/wp-blog",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://kornienko.site",
  "authors": [
    {
      "name": "Gregory Kornienko",
      "email": "gergbiv@gmail.com",
      "homepage": "https://github.com/gregbiv"
    }
  ],
  "keywords": [
    "wordpress",
    "stack",
    "composer",
    "vagrant",
    "wp"
  ],
  "support": {
    "issues": "https://github.com/gregbiv/wp-blog/issues"
  },
  "config": {
    "preferred-install": "dist",
    "dropin-installer": "copy",
    "generate-salts": true
  },
  "scripts": {
    "post-install-cmd": [
      "Anolilab\\Wordpress\\SaltGenerator\\Generator::addSalts"
    ],
    "check-cs": "sh vendor/bin/php-cs-fixer fix -v --dry-run",
    "fix-cs": "sh vendor/bin/php-cs-fixer fix",
    "test": [
      "vendor/bin/phpcs --ignore=web/app/,vendor/,data/migrations -n -s ."
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://wp-languages.github.io"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.6",
    "composer-plugin-api": "1.1.0",
    "johnpbloch/wordpress": "*",
    "robmorgan/phinx": "^0.9.1",
    "vlucas/phpdotenv": "^2.0.1",
    "oscarotero/env": "^1.1.0",

    "anolilab/wordpress-salt-generator": "~1.2",
    "koodimonni/composer-dropin-installer": "^1.2",
    "koodimonni-language/core-ru_ru": "*",
    "koodimonni-language/core-en_gb": "*",
    "gwa/wp-disable-auto-update": "~1.0",
    "gwa/multisite-directory-resolver": "~2.1",

    "wpackagist-theme/wp-bootstrap-starter": "^v3.0",

    "wpackagist-plugin/ga-google-analytics": "*",
    "wpackagist-plugin/redis-cache": "*",
    "wpackagist-plugin/debug-bar": "~0.9",
    "wpackagist-plugin/debug-bar-post-types": "~2.0",
    "wpackagist-plugin/log-deprecated-notices": "~0.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2",
    "fabpot/php-cs-fixer": "~1.11"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin",
        "type:wordpress-dropin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "dropin-paths": {
      "web/app/languages/": [
        "type:wordpress-language"
      ],
      "web/app/languages/plugins/": [
        "type:wordpress-plugin-language"
      ],
      "web/app/languages/themes/": [
        "type:wordpress-theme-language"
      ]
    },
    "wordpress-install-dir": "web/wp",
    "wordpress-languages-dir": "web/app/languages/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
